<% layout("/layouts/boilerplate") -%>
<body>
  <div style="padding-left: 4rem">
    <div class="row mt-4">
      <div class="col-8 offset-1">
        <div class="card" style="width: 18rem">
          <img
            src="<%= listingData.image %>"
            class="card-img-top show-img"
            alt="listing_img"
          />
          <div class="card-body">
            <p class="card-text" style="font-weight: 500 !important">
              <%= listingData.title %>
            </p>
          </div>
        </div>
      </div>
    </div>
    <hr />
    <h3>Listing Details:</h3>
    <div class="details">
      <ul>
        <li><%= listingData.description %></li>
        <li>&#8377;<%=listingData.price.toLocaleString("en-IN")%></li>
        <li><%= listingData.location %></li>
        <li><%= listingData.country %></li>
      </ul>
    </div>

    <div class="row">
      <div class="col-10">
        <div style="display: flex; justify-content: start; width: 100%">
          <a
            href="/listings/<%= listingData._id %>/edit"
            class="btn btn-dark add-btn"
            style="height: 38px"
            >&nbsp;&nbsp;&nbsp;Edit&nbsp;&nbsp;&nbsp;
          </a>
          <br /><br />
          <form
            method="POST"
            action="/listings/<%=listingData._id %>?_method=DELETE"
          >
            <button class="btn btn-dark" style="margin-left: 5rem">
              Delete
            </button>
          </form>
        </div>
      </div>
    </div>
    <hr />
    <div class="mb-3">
      <h4>Leave a Review</h4>
      <form
        class="col-8 offset-1 needs-validation"
        action="/listings/<%=listingData._id%>/reviews"
        method="post"
        novalidate
      >
        <div>
          <label for="rating" class="form-label">Rating</label>
          <input
            id="rating"
            type="range"
            min="1"
            max="5"
            name="review[rating]"
            class="form-range"
          />
        </div>
        <div>
          <label class="form-label" for="comment">Comments</label><br />
          <textarea
            class="form-control"
            id="comment"
            rows="3"
            name="review[comment]"
            required
          ></textarea>
          <div class="invalid-feedback">Review can't be empty</div>
        </div>

        <div class="mt-2">
          <button class="btn btn-outline-dark">Submit</button>
        </div>
      </form>
    </div>
  </div>
</body>
