<% layout("/layouts/boilerplate") -%>
<body>
  <div style="padding-left: 4rem">
    <div class="row mt-4">
      <div class="col-8 offset-1">
        <div class="card" style="width: 18rem">
          <img
            src="<%= listingData.image %>"
            class="card-img-top show-img"
            alt="listing_img"
          />
          <div class="card-body">
            <p class="card-text" style="font-weight: 500 !important">
              <%= listingData.title %>
            </p>
          </div>
        </div>
      </div>
    </div>
    <hr />
    <h3>Listing Details:</h3>
    <div class="details">
      <ul>
        <li>
          <b><i>Owned by <%= listingData.owner.username %></i></b>
        </li>
        <li><%= listingData.description %></li>
        <li>&#8377;<%=listingData.price.toLocaleString("en-IN")%></li>
        <li><%= listingData.location %></li>
        <li><%= listingData.country %></li>
      </ul>
    </div>

    <% if(currUser && listingData.owner._id.equals(currUser._id)) {%>
    <div class="row">
      <div class="col-10">
        <div style="display: flex; justify-content: start; width: 100%">
          <a
            href="/listings/<%= listingData._id %>/edit"
            class="btn btn-dark add-btn"
            style="height: 38px"
            >&nbsp;&nbsp;&nbsp;Edit&nbsp;&nbsp;&nbsp;
          </a>
          <br /><br />
          <form
            method="POST"
            action="/listings/<%=listingData._id %>?_method=DELETE"
          >
            <button class="btn btn-dark" style="margin-left: 5rem">
              Delete
            </button>
          </form>
        </div>
      </div>
    </div>
    <hr />
    <%}%>
    <div class="mb-3">
      <% if(currUser) {%>
      <h4>Leave a Review</h4>
      <form
        class="col-8 offset-1 needs-validation"
        action="/listings/<%=listingData._id%>/reviews"
        method="post"
        novalidate
      >
        <div>
          <label for="rating" class="form-label">Rating</label>
          <input
            id="rating"
            type="range"
            min="1"
            max="5"
            name="review[rating]"
            class="form-range"
          />
        </div>
        <div>
          <label class="form-label" for="comment">Comments</label><br />
          <textarea
            class="form-control"
            id="comment"
            rows="3"
            name="review[comment]"
            required
          ></textarea>
          <div class="invalid-feedback">Review can't be empty</div>
        </div>

        <div class="mt-2">
          <button class="btn btn-outline-dark">Submit</button>
        </div>
      </form>

      <%}%>
      <hr />
      <div
        class="row"
        style="
          display: flex;
          justify-content: space-between;
          padding-left: 4rem;
          padding-right: 4rem;
        "
      >
        <h4>All Reviews</h4>
        <% for (review of listingData.reviews){ %>
        <div
          class="mb-3 col-6 row"
          style="
            border: 0.3px solid grey;
            display: flex;
            justify-content: space-between;
            padding-left: 1rem;
            padding-right: 1rem;
            border-radius: 5px;
            flex-wrap: wrap;
            line-height: 2rem;
          "
        >
          <div class="col-10">"<%= review.comment%>"</div>
          <div class="col-2" style="display: flex; justify-content: end">
            <%= review.rating%>/5
          </div>
          <div class="col-3" style="padding: 0.3rem; line-height: 1rem">
            <form
              action="/listings/<%=listingData._id%>/reviews/<%=review._id%>?_method=DELETE"
              method="POST"
            >
              <button class="btn btn-sm btn-outline-dark">delete</button>
            </form>
          </div>
          <div class="col-9" style="text-align: end">
            -<%= review.author.username %>
          </div>
        </div>
        <%}%>
      </div>
    </div>
  </div>
</body>
