<% layout("/layouts/boilerplate") -%>
<body>
  <div style="padding: 3rem">
    <h2>Edit Listing</h2>

    <form
      method="POST"
      action="/listing/<%= data._id %>?_method=PUT"
      novalidate
      class="needs-validation"
    >
      <div>
        <label for="title" class="form-label">Title :-</label>
        <input
          type="text"
          name="listing[title]"
          value="<%=data.title %>"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Title is missing!</div>
      </div>
      <br />
      <div>
        <label for="description" class="form-label">Description :-</label>
        <input
          type="text"
          name="listing[description]"
          value="<%=data.description %>"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Description is missing!</div>
      </div>
      <br />

      <div>
        <label for="image" class="form-label">URL :-</label>
        <input
          type="text"
          name="listing[image.url]"
          value="<%=data.image.url %>"
          class="form-control"
          required
        />
      </div>
      <br />

      <div class="row">
        <div class="col-md-4">
          <label for="price" class="form-label">Price :-</label>
          <input
            type="number"
            name="listing[price]"
            value="<%=data.price %>"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Enter valid price</div>
        </div>
        <br />

        <div class="col-md-8">
          <label for="location" class="form-label">Location :-</label>
          <input
            type="text"
            name="listing[location]"
            value="<%=data.location %>"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">locaiton is missing!</div>
        </div>
      </div>
      <br />

      <div>
        <label for="country" class="form-label">Country :-</label>
        <input
          type="text"
          name="listing[country]"
          value="<%=data.country %>"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Plaease enter your country</div>
      </div>
      <br />

      <button class="btn btn-dark add-btn">Submit</button><br /><br />
    </form>
  </div>
</body>
