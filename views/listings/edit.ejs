<% layout("/layouts/boilerplate") -%> 
  <body>
    <h2>Create a new Listing</h2>

    <form method="POST" action="/listing/<%= data._id %>?_method=PUT" >
      <input type="text" name="listing[title]" 
      value="<%=data.title %>" /> <br /><br>
      <textarea name="listing[description]"><%= data.description %></textarea>
      <br /><br>    
      <input type="text" name="listing[image]" 
      value="<%=data.image.url %>" /> <br /><br>
      <input type="number" name="listing[price]" value="<%=data.price %>" /> <br /><br>
      <input type="text" name="listing[location]" value="<%=data.location %>" /> <br /><br>
      <input type="text" name="listing[country]" value="<%=data.country %>" /> <br /><br>
      <button>Submit</button>
    </form>
  </body>

