<% layout("/layouts/boilerplate") -%>
<body>
  <div style="padding: 3rem">
    <h2>Create a new Listing</h2>

    <form method="POST" action="/listing/<%= data._id %>?_method=PUT">
      <div>
        <label for="label" class="form-label">Title :-</label>
        <input
          type="text"
          name="listing[title]"
          value="<%=data.title %>"
          class="form-control"
        />
      </div>
      <br />

      <div>
        <label for="description" class="form-label">Description :-</label>
        <textarea name="listing[description]" class="form-control">
          <%=data.description%></textarea
        >
      </div>
      <br />

      <div>
        <label for="image" class="form-label">URL :-</label>
        <input
          type="text"
          name="listing[image]"
          value="<%=data.image.url %>"
          class="form-control"
        />
      </div>
      <br />

      <div class="row">
        <div class="col-md-4">
          <label for="price" class="form-label">Price :-</label>
          <input
            type="number"
            name="listing[price]"
            value="<%=data.price %>"
            class="form-control"
          />
        </div>
        <br />

        <div class="col-md-8">
          <label for="location" class="form-label">Location :-</label>
          <input
            type="text"
            name="listing[location]"
            value="<%=data.location %>"
            class="form-control"
          />
        </div>
      </div>
      <br />

      <div>
        <label for="country" class="form-label">Country :-</label>
        <input
          type="text"
          name="listing[country]"
          value="<%=data.country %>"
          class="form-control"
        />
      </div>
      <br />

      <button class="btn btn-dark add-btn">Submit</button><br /><br />
    </form>
  </div>
</body>
