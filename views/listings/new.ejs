<% layout("/layouts/boilerplate") -%>
<body>
  <div style="padding: 3rem">
    <h2>Create a new Listing</h2>

    <form action="/listings" method="post" class="needs-validation" novalidate>
      <div>
        <label for="label" class="form-label">Title :-</label>
        <input
          type="text"
          name="listing[title]"
          placeholder="Enter a catchy title"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Title is missing!</div>
      </div>
      <br />

      <div>
        <label for="description" class="form-label">Description :-</label>
        <textarea
          name="listing[description]"
          class="form-control"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Description is missing!</div>
      </div>
      <br />

      <div>
        <label for="image" class="form-label">URL :-</label>
        <input
          type="text"
          name="listing[image]"
          placeholder="URL"
          class="form-control"
        />
      </div>
      <br />

      <div class="row">
        <div class="col-md-4">
          <label for="price" class="form-label">Price :-</label>
          <input
            type="text"
            name="listing[price]"
            placeholder="e.g 1200"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Enter valid price</div>
        </div>
        <br />

        <div class="col-md-8">
          <label for="location" class="form-label">Location :-</label>
          <input
            type="text"
            name="listing[location]"
            placeholder="Enter location"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">locaiton is missing!</div>
        </div>
      </div>
      <br />

      <div>
        <label for="country" class="form-label">Country :-</label>
        <input
          type="text"
          name="listing[country]"
          placeholder="Enter country"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Plaease enter your country</div>
      </div>
      <br />

      <button class="btn btn-dark add-btn">Submit</button><br /><br />
    </form>
  </div>
</body>
